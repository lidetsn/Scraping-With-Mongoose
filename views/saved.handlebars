
<div class="container  mt-4 maincontainer">
<div class="container">
<nav class="navbar navbar-expand-lg navbar-light  bg-dark">
  <a class="navbar-brand text-white" href="#">Scraper</a>
  <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
    <div class="navbar-nav">
      <a class="nav-item nav-link text-white" href="/">Home</a>
      <a class="nav-item nav-link active text-white" href="/saved">Saved articles</a>
    </div>
  </div>
</nav>
</div>
<div class="container  mt-2">
<div class="jumbotron jumbotron-fluid text-center">
  <h3 class="text-muted">Get the latest Tech News</h3>
</div>
</div>
<div class="container">
  <h3>Saved articles</h3>
  {{#each articles}}
    <div class="card bg-light mb-3">
      <div class="card-body">
        <h5 class="card-title">{{title}}</h5>
        <hr>
        <a href="{{link}}" class="card-link" target="_blank">View full article</a>
        <p class="card-text">{{summary}}...</p>
        <a data-articleId= {{_id}} class="btn btn-primary unsave-btn">Remove from saved</a>
        <a data-articleId= {{_id}} class="btn btn-primary note-modal-btn" data-toggle="modal">Add or view note</a>
      </div>
    </div>
  {{/each}}
</div>
</div>

<div id="add-note-modal" class="modal" tabindex="-1" role="dialog" data-articleId="">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h6 id="note-modal-title" class="modal-title text-info"></h6>
      </div>
      <div class="modal-body container">
        <ul class="notes-list">
        </ul>
        <div class="form-group">
          <label for="note-area">New note</label>
          <span  class="text-danger"id="error"></span>
          <textarea name="new-note-area" class="form-control" id="note-body" rows="2" required></textarea>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal" id="cancel">Cancel</button>
          <button type="button" class="btn btn-primary note-save-btn" >Save</button>

        </div>
      </div>
    </div>
  </div>
  </div>

  